<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/TFnameSU"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"

        android:hint="Full Name"
        android:gravity="center"
        android:textSize="18dp"
        android:inputType="textPersonName"
        android:background="@drawable/round_border"/>



    <EditText
        android:id="@+id/TFemailSU"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/TFnameSU"
        android:layout_marginTop="25dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"


        android:hint="Email Address"
        android:gravity="center"
        android:textSize="18dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/round_border"/>

    <EditText
        android:id="@+id/TFpwordSU"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/TFemailSU"
        android:layout_marginTop="25dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"


        android:hint="@string/pword_hint"
        android:gravity="center"
        android:textSize="18dp"
        android:inputType="textPassword"
        android:background="@drawable/round_border"/>

    <EditText
        android:id="@+id/TFconpwordSU"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/TFpwordSU"
        android:layout_marginTop="25dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"


        android:hint="Confirm Password"
        android:gravity="center"
        android:textSize="18dp"
        android:inputType="textPassword"
        android:background="@drawable/round_border"/>

    <EditText
        android:id="@+id/TFphoneSU"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/TFconpwordSU"
        android:layout_marginTop="25dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"

        android:hint="@string/phone_hint"
        android:gravity="center"
        android:textSize="18dp"
        android:inputType="phone"
        android:background="@drawable/round_border"/>

    <Button
        android:id="@+id/bConfirm"
        android:layout_width="122dp"
        android:layout_height="70dp"
        android:layout_below="@+id/TFphoneSU"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="60dp"

        android:onClick="onSignupClick"
        android:text="Confirm"
  />

    <Button
        android:id="@+id/bCancel"
        android:layout_width="122dp"
        android:layout_height="70dp"
        android:layout_below="@+id/TFphoneSU"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"

        android:onClick="onSignupClick"
        android:text="Cancel"
   />
</RelativeLayout>
